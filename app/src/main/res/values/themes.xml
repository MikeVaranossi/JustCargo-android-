<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JustCargo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_primary_color</item>
        <item name="colorPrimaryVariant">@color/dark_primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_primary_color</item>
        <item name="colorOnError">#F44336</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.JustCargo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.JustCargo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.JustCargo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SubheaderText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/dark_primary_color</item>
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="StandartText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/dark_primary_color</item>
        <item name="android:textSize">@dimen/text_standart</item>
    </style>

    <style name="MyStyleButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/my_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_button</item>
        <item name="cornerRadius">@dimen/m_margin</item>
        <item name="android:paddingStart">@dimen/xs_padding</item>
        <item name="android:paddingEnd">@dimen/xs_padding</item>
        <item name="android:layout_marginStart">@dimen/l_margin</item>
        <item name="android:layout_marginEnd">@dimen/l_margin</item>
        <item name="android:layout_marginBottom">@dimen/m_margin</item>
    </style>

    <style name="MyOutlinedBoxStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeErrorColor">@color/design_default_color_error</item>
        <item name="android:layout_marginStart">@dimen/l_margin</item>
        <item name="android:layout_marginEnd">@dimen/l_margin</item>
    </style>

    <style name="MyStyleCalendar" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="android:background">@drawable/backgound_calendar</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:focusedMonthDateColor">@color/dark_primary_color</item>
        <item name="android:weekDayTextAppearance">@style/SubheaderText</item>
    </style>

    <style name="TextHeader">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_primary_color</item>
    </style>

    <style name="TextDefaultColor">
        <item name="android:textColor">@color/dark_primary_color</item>
    </style>

    <style name="ButtonTransparentBackground" parent="Widget.AppCompat.Button">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/primary_second_color</item>
        <item name="android:layout_marginStart">@dimen/s_margin</item>
        <item name="android:layout_marginEnd">@dimen/s_margin</item>
        <item name="android:layout_marginBottom">@dimen/s_margin</item>
        <item name="android:paddingStart">@dimen/s_margin</item>
        <item name="android:paddingEnd">@dimen/s_margin</item>
    </style>

    <style name="MyExposedDropdownMenuStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/edit_text_box_border</item>
        <item name="android:layout_marginStart">@dimen/l_margin</item>
        <item name="android:layout_marginEnd">@dimen/l_margin</item>
    </style>

    <style name="MyStyle.PopupMenu" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/dark_primary_color</item>
        <item name="android:popupBackground">@drawable/background_popup</item>
    </style>


</resources>