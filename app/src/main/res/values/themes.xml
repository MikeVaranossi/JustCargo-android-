<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JustCargo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_primary_color</item>
        <item name="colorPrimaryVariant">@color/dark_primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.JustCargo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.JustCargo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.JustCargo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="MyOutlinedBoxStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/edit_text_box_border</item>
        <item name="android:layout_marginStart">@dimen/xx_margin</item>
        <item name="android:layout_marginEnd">@dimen/xx_margin</item>
    </style>

    <style name="MyExposedDropdownMenuStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/edit_text_box_border</item>
        <item name="android:layout_marginStart">@dimen/xx_margin</item>
        <item name="android:layout_marginEnd">@dimen/xx_margin</item>
    </style>

    <style name="MyButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@drawable/button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/xx_margin</item>
        <item name="android:layout_marginEnd">@dimen/xx_margin</item>
        <item name="android:layout_marginBottom">@dimen/xx_margin</item>
        <item name="android:paddingStart">@dimen/xx_margin</item>
        <item name="android:paddingEnd">@dimen/xx_margin</item>
    </style>

    <style name="TextHeader">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_primary_color</item>
    </style>

    <style name="TextXX">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/dark_primary_color</item>
    </style>

</resources>