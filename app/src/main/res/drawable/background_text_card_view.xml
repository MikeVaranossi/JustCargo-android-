<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- "shadow" -->
    <item>
        <shape android:shape="rectangle" >
            <!--            <solid android:color="#6B6CA6"/>-->
            <gradient
                android:angle="90"
                android:centerColor="@color/accent_color_half_alpha"
                android:centerY="0.5"
                android:endColor="#6B6CA6"
                android:startColor="#6B6CA6"
                android:type="linear" />
            <corners android:radius="12dp" />
        </shape>

    </item>

    <item android:top="7px" android:bottom="2px" android:left="2px" android:right="2px">
        <shape android:shape="rectangle">
            <solid android:color="#B1B2DD"/>
            <corners android:radius="12dp" />
        </shape>
    </item>



</layer-list>
