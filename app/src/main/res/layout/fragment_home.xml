<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_view_main"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="@dimen/m_margin"
        app:layout_constraintBottom_toTopOf="@+id/text_view_add_cargo_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_view_add_cargo_hint"
        style="@style/SubheaderText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="@dimen/m_margin"
        android:layout_marginEnd="@dimen/m_margin"
        android:layout_marginBottom="@dimen/m_margin"
        android:text="@string/add_cargo_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view_main"
        app:layout_constraintBottom_toTopOf="@+id/button_add_cargo" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_add_cargo"
        style="@style/MyStyleButton"
        android:layout_margin="@dimen/m_margin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/m_padding"
        android:paddingBottom="@dimen/m_padding"
        android:drawableEnd="@drawable/ic_icone_delivery_parcel_white"
        android:paddingStart="@dimen/icon_button_padding"
        android:paddingEnd="@dimen/icon_button_padding"
        android:text="@string/button_add_cargo_text"
        app:layout_constraintTop_toBottomOf="@id/text_view_add_cargo_hint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>